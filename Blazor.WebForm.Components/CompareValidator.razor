@using Blazor.WebForm.UI
@using Blazor.WebForm.UI.ControlComponents
@using System.Web.UI
@using System.Web.UI.WebControls
@inherits BaseCompareValidatorControlComponent<System.Web.UI.WebControls.CompareValidator>
@this.RenderWithInner(this.Control)
@code {
    [Parameter]
    public string ControlToCompare
    {
        get
        {
            return this.Control.ControlToCompare;
        }
        set
        {
            this.Control.ControlToCompare = value;
        }
    }

    [Parameter]
    public ValidationCompareOperator Operator
    {
        get
        {
            return this.Control.Operator;
        }
        set
        {
            this.Control.Operator = value;
        }
    }

    [Parameter]
    public string ValueToCompare
    {
        get
        {
            return this.Control.ValueToCompare;
        }
        set
        {
            this.Control.ValueToCompare = value;
        }
    }
}
