@using Blazor.WebForm.UI
@using Blazor.WebForm.UI.ControlComponents
@using System.Web.UI
@using System.Web.UI.WebControls
@inherits WebControlComponent<System.Web.UI.WebControls.TextBox>
@this.Render(this.Control)
@code {
    [Parameter]
    public string ValidationGroup
    {
        get
        {
            return this.Control.ValidationGroup;
        }
        set
        {
            this.Control.ValidationGroup = value;
        }
    }

    [Parameter]
    public string Text
    {
        get
        {
            return this.Control.Text;
        }
        set
        {
            this.Control.Text = value;
        }
    }

    [Parameter]
    public int Rows
    {
        get
        {
            return this.Control.Rows;
        }
        set
        {
            this.Control.Rows = value;
        }
    }

    [Parameter]
    public bool ReadOnly
    {
        get
        {
            return this.Control.ReadOnly;
        }
        set
        {
            this.Control.ReadOnly = value;
        }
    }

    [Parameter]
    public TextBoxMode TextMode
    {
        get
        {
            return this.Control.TextMode;
        }
        set
        {
            this.Control.TextMode = value;
        }
    }

    [Parameter]
    public int MaxLength
    {
        get
        {
            return this.Control.MaxLength;
        }
        set
        {
            this.Control.MaxLength = value;
        }
    }

    [Parameter]
    public int Columns
    {
        get
        {
            return this.Control.Columns;
        }
        set
        {
            this.Control.Columns = value;
        }
    }

    [Parameter]
    public bool Wrap
    {
        get
        {
            return this.Control.Wrap;
        }
        set
        {
            this.Control.Wrap = value;
        }
    }

    [Parameter]
    public bool CausesValidation
    {
        get
        {
            return this.Control.CausesValidation;
        }
        set
        {
            this.Control.CausesValidation = value;
        }
    }

    [Parameter]
    public AutoCompleteType AutoCompleteType
    {
        get
        {
            return this.Control.AutoCompleteType;
        }
        set
        {
            this.Control.AutoCompleteType = value;
        }
    }

    [Parameter]
    public bool AutoPostBack
    {
        get
        {
            return this.Control.AutoPostBack;
        }
        set
        {
            this.Control.AutoPostBack = value;
        }
    }

    [Parameter]
    public EventHandler OnTextChanged
    {
        get
        {
            return this.GetEventProperty();
        }
        set
        {
            this.SetEventProperty(value, i => this.Control.TextChanged += i, i => this.Control.TextChanged -= i);
        }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (this.HasPropertyBindEvent<string>(nameof(this.Text)))
        {
            this.Control.AutoPostBack = true;
            this.Control.TextChanged += this.BindTextChanged;
        }
    }

    private void BindTextChanged(object sender, EventArgs e)
    {
        this.InvokePropertyBindEvent(nameof(this.Text), this.Text);
    }
}
