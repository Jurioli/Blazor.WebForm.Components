@using Blazor.WebForm.UI
@using Blazor.WebForm.UI.ControlComponents
@using System.Web.UI
@using System.Web.UI.WebControls
@inherits ControlComponentBase<System.Web.UI.WebControls.DataPager>
@this.RenderWithCascading(this.Control, this.Fields, this.ChildLevel)
@code {
    [Parameter]
    public RenderFragment Fields { get; set; }

    [Parameter]
    public int ChildLevel { get; set; } = 1;

    [Parameter]
    public int PageSize
    {
        get
        {
            return this.Control.PageSize;
        }
        set
        {
            this.Control.PageSize = value;
        }
    }

    [Parameter]
    public string PagedControlID
    {
        get
        {
            return this.Control.PagedControlID;
        }
        set
        {
            this.Control.PagedControlID = value;
        }
    }
}
